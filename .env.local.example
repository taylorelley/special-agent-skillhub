# Frontend
VITE_CONVEX_URL=
VITE_CONVEX_SITE_URL=
VITE_SOULHUB_SITE_URL=
VITE_SOULHUB_HOST=
VITE_SITE_MODE=
SITE_URL=http://localhost:3000
CONVEX_SITE_URL=

# Convex Auth (GitHub OAuth App — optional when using GitLab or OIDC only)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# Convex Auth (GitLab OAuth App — optional, both required to enable)
AUTH_GITLAB_ID=
AUTH_GITLAB_SECRET=
# For self-hosted GitLab; omit for gitlab.com
# AUTH_GITLAB_URL=https://gitlab.example.com

# Convex Auth (Generic OIDC Provider — optional, all three required to enable)
# Supports any OIDC-compliant provider (Authentik, Keycloak, Dex, etc.)
AUTH_OIDC_ISSUER=
AUTH_OIDC_CLIENT_ID=
AUTH_OIDC_CLIENT_SECRET=
# Display name shown on the sign-in button (e.g. "Authentik", "Company SSO")
AUTH_OIDC_NAME=

# Controls new user registrations. Default (unset): new sign-ups are allowed.
# Set to "false" to block new registrations; existing users can still sign in.
# AUTH_ALLOW_NEW_SIGNUPS=false

# Convex Auth JWT keys (generated via @convex-dev/auth CLI)
JWT_PRIVATE_KEY=
JWKS=

# Embeddings
OPENAI_API_KEY=

# Frontend: controls which sign-in buttons appear (must match server provider config).
# GitHub is shown by default; set VITE_AUTH_SHOW_GITHUB=false to hide it.
# GitLab and OIDC are hidden by default; set their NAME vars to enable them.
# VITE_AUTH_SHOW_GITHUB=false     # opt-out: hide the GitHub sign-in button
# VITE_AUTH_GITLAB_NAME=GitLab    # opt-in: show GitLab button with this label
# VITE_AUTH_OIDC_NAME=Authentik   # opt-in: show OIDC button with this label
